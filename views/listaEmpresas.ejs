<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Lista de Empresas - ALIMOP</title>
    <link rel="stylesheet" href="../CSS/normalize.css">
    <link rel="stylesheet" href="../CSS/lista-empresas.css">
</head>
<body>
    <div class="contenedor">
        <header class="header">
            <div class="menu-logo">
                <!-- Menu -->
                <div class="menu" id="btnMenu">
                    <img src="img/IconosMenu/menu.png" alt="menu">
                    <p>Men√∫</p>
                </div>

                <div class="logo">
                    <a href="<%= SesionActiva ? `/inicio/${user.id}` : '/' %>">
                        <img src="img/logo/logo.jpg" alt="Logo Alimop">
                    </a>
                    <h1 class="titulo">ALIMOP</h1>
                </div>
            </div>

            <div class="busqueda">
                <input type="text" placeholder="Buscar..." class="input-busqueda">
                <button class="btn-busqueda">üîç</button>
            </div>

            <!-- Men√∫ de navegaci√≥n condicional -->
            <nav class="opciones">
                <ul class="navegacion">
                    <% if (SesionActiva) { %>
                        <!-- Opciones para usuarios logueados -->
                        <li><a href="/inicio/<%= user.id %>">Inicio</a></li>
                        <li><a href="#">Menu</a></li>
                        <li><a href="#">Notificaciones</a></li>
                        <li><a href="#">Carrito</a></li>
                        <li class="usuario-dropdown">
                            <a href="#" class="usuario-btn">Usuario: <%= user.nombreUsuario %> ‚ñº</a>
                            <ul class="usuario-menu">
                                <li><a href="/perfil/<%= user.id %>">Mi Perfil</a></li>
                                <form action="/logout" method="POST">
                                    <li><button type="submit">Cerrar Sesi√≥n</button></li>
                                </form>
                            </ul>
                        </li>
                    <% } else { %>
                        <!-- Opciones para usuarios no logueados -->
                        <li><a href="/">Inicio</a></li>
                        <li><a href="#">Menu</a></li>
                        <li><a href="#">Notificaciones</a></li>
                        <li><a href="#">Carrito</a></li>
                        <li><a href="/loginC">Iniciar Sesi√≥n</a></li>
                        <li><a href="/registroC">Registrarse</a></li>
                    <% } %>
                </ul>
            </nav>
        </header>

        <nav>
            <!--Barra de Mensaje-->
            <div class="mensaje-azul">
                <h2 class="Mensaje">¬°Ay√∫danos a reducir la perdida de alimentos!</h2> 
            </div>
        </nav>
    
        <div class="lista-empresas">
            <div class="container-empresas">
                <div class="item">
                    <center>
                        <img src="https://ik.imagekit.io/iyzwlkiot/logos-empresas/kfc.png?updatedAt=1747268853832" alt="" class="img-empresa">
                    <span>KFC</span>
                    </center>
                </div>
                <div class="item">
                    <center>
                        <img src="https://ik.imagekit.io/iyzwlkiot/logos-empresas/burgerking.jpg?updatedAt=1747268858767" alt="" class="img-empresa">
                    <span>Burger king</span>
                    </center>
                </div>
                <div class="item">
                <center>
                    <img src="https://ik.imagekit.io/iyzwlkiot/logos-empresas/mcdonals.jpg?updatedAt=1747268858142" alt="" class="img-empresa">
                    <span> Mcdonalds</span>
                </center>
                </div>
                <div class="item">
                    <center>
                        <img src="https://ik.imagekit.io/iyzwlkiot/logos-empresas/burgerking.jpg?updatedAt=1747268858767" alt="" class="img-empresa">
                    <span>El corral</span>
                    </center>
                </div>
                
            </div>
        </div>
    
        <!--inicio pie de pagina-->
        <footer class="Final">
            <h2 class="FinalPagina">TODOS LOS DERECHOS RESERVADOS</h2>
            <h4 class="piePagina">ALIMOP.com S.A.S. NIT 1463718-8. Calle 85 #45-49 Piso 5, Bogot√°, Colombia</h4>
        </footer>
    </div>

    <script>
        const btnMenu = document.getElementById("btnMenu");
        const menuDesplegable = document.getElementById("menuDesplegable");

        btnMenu.addEventListener("click", () => {
            if (menuDesplegable.style.display === "block") {
                menuDesplegable.style.display = "none";
            } else {
                menuDesplegable.style.display = "block";
            }
        });

        document.addEventListener('DOMContentLoaded', function() {
            const usuarioDropdown = document.querySelector('.usuario-dropdown');
            const usuarioMenu = usuarioDropdown.querySelector('.usuario-menu');
            
            usuarioDropdown.addEventListener('click', function(e) {
                if (e.target.closest('.usuario-btn')) {
                    e.preventDefault();
                    usuarioMenu.classList.toggle('active');
                }
            });

            document.addEventListener('click', function(e) {
                if (!e.target.closest('.usuario-dropdown')) {
                    usuarioMenu.classList.remove('active');
                }
            });
        });
    </script>
</body>
</html>